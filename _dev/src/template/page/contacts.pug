extends ../main

block vars
	-
		var breadcrumbs = [
			{
				name: 'Главная',
				link: 'index.html'
			},
			{
				name: 'Контакты',
				link: '#'
			},
		]

block content
	._container

		.title
			.title__inner Контакты

		._row
			.contacts-col
				p (050) 787 70 02; (050) 787 70 02; (050) 787 70 02
				<br>
				p ООО "Мэйкап"
				p 01001, г.Киев, ул. Архитектора Городецкого, 11Б
				<br>
				p МЫ ВСЕГДА НА СВЯЗИ!
				p Связаться с нами вы всегда можете по телефонам указанным в шапке сайта.
				p Вы можете направить свой запрос/жалобу/предложение с помощью следующей формы.

				form._row.form.form_contact
					.form-group
						label.form__label.form__label_required
							.form__label-text Ваше имя
							input.form__input(type="text" name="name" placeholder="Введите ваше имя")
						label.form__label.form__label_required
							.form__label-text Ваша фамилия
							input.form__input(type="text" name="surname" placeholder="Введите вашу фамилию")
						label.form__label.form__label_required
							.form__label-text Ваш e-mail
							input.form__input(type="email" name="email" placeholder="Введите ваш e-mail")
					.form-group
						label.form__label.form__label_required
							.form__label-text Текст сообщения
							textarea.form__input.form__input_textarea(name="text" placeholder="Введите ваше сообщение")
						label.form__label.form__label_button
							button.button.hvr-sweep-to-right.form__button Отправить

			.contacts-col
				// ====== google-map ======= 
				.google-map(onMouseLeave="document.querySelector('.google-map__overlay').style.pointerEvents=''")
					.google-map__overlay(onClick="style.pointerEvents='none'")
					iframe(src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d39900487.71448589!2d40.60944223142707!3d52.382522441872524!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sru!2sua!4v1482606480304" width="100%" height="375" frameborder="0" style="border:0" allowfullscreen)