extends ../main

block vars
	-
		var breadcrumbs = [
			{
				name: 'Главная',
				link: 'index.html'
			},
			{
				name: 'Контакты',
				link: '#'
			},
		]

block content
	._container

		.title
			.title__inner Корзина


		// ====== cart-table ======= 
		.checkout
			.cart__table
				.cart__thead
					.cart__th.cart__th_img Изображение
					.cart__th.cart__th_name Название
					.cart__th.cart__th_num Количество
					.cart__th.cart__th_price Цена
					.cart__th.cart__th_amount Сумма

				ul.cart__list
					li.cart__item(data-cart-id="1")
						.cart__item-info.cart__item-img-holder
							a.cart__item-name(href="product.html")
								img.cart__item-img(src="/img/products/product_1.jpg", alt="")
							a.cart__item-delete(href="#") Удалить

						.cart__item-info.cart__item-name-holder
							a.cart__item-name(href="product.html") Кроссовки Maximum A758-1 $

						.cart__item-info.cart__item-num-holder
							._row.product-amount-changer
								.product-amount-changer__btn(data-action="-")
									.icon.icon-minus
								input.product-amount-changer__input(type="text" name="amount" value="1" readonly)
								.product-amount-changer__btn(data-action="+")
									.icon.icon-plus

						.cart__item-info.cart__item-price-holder
							.product__price
								span 500,00
								
						.cart__item-info.cart__item-amount-holder
							.product__price
								span 1000,00
					li.cart__item(data-cart-id="1")
						.cart__item-info.cart__item-img-holder
							a.cart__item-name(href="product.html")
								img.cart__item-img(src="/img/products/product_1.jpg", alt="")
							a.cart__item-delete(href="#") Удалить

						.cart__item-info.cart__item-name-holder
							a.cart__item-name(href="product.html") Кроссовки Maximum A758-1 $

						.cart__item-info.cart__item-num-holder
							._row.product-amount-changer
								.product-amount-changer__btn(data-action="-")
									.icon.icon-minus
								input.product-amount-changer__input(type="text" name="amount" value="1" readonly)
								.product-amount-changer__btn(data-action="+")
									.icon.icon-plus

						.cart__item-info.cart__item-price-holder
							.product__price
								span 500,00
								
						.cart__item-info.cart__item-amount-holder
							.product__price
								span 1000,00
					li.cart__item(data-cart-id="1")
						.cart__item-info.cart__item-img-holder
							a.cart__item-name(href="product.html")
								img.cart__item-img(src="/img/products/product_1.jpg", alt="")
							a.cart__item-delete(href="#") Удалить

						.cart__item-info.cart__item-name-holder
							a.cart__item-name(href="product.html") Кроссовки Maximum A758-1 $

						.cart__item-info.cart__item-num-holder
							._row.product-amount-changer
								.product-amount-changer__btn(data-action="-")
									.icon.icon-minus
								input.product-amount-changer__input(type="text" name="amount" value="1" readonly)
								.product-amount-changer__btn(data-action="+")
									.icon.icon-plus

						.cart__item-info.cart__item-price-holder
							.product__price
								span 500,00

						.cart__item-info.cart__item-amount-holder
							.product__price
								span 1000,00

				.cart__footer
					.cart__total Итого:
						span 1800,00 грн.

			form.form.checkout__form
				.form__title Оформление заказа
				.form-group
					label.form__label.form__label_required
						.form__label-text Ф.И.О.
						input.form__input(type="text" name="name" placeholder="Введите Ф.И.О.")
					label.form__label.form__label_required
						.form__label-text Ваш e-mail
						input.form__input(type="email" name="email" placeholder="Введите ваш e-mail")
					label.form__label.form__label_required
						.form__label-text Ваш телефон
						input.form__input(type="tel" name="phone" placeholder="Введите номер вашего телефона")
					label.form__label.form__label_required
						.form__label-text Адрес доставки
						input.form__input(type="text" name="address" placeholder="Введите адрес доставки")

					label.form__label.form__label_required
						.form__label-text Способ доставки
						select.chekout-delivery__select
							option.chekout-delivery__option(value="0") Выберите способ доставки
							option.chekout-delivery__option(value="1") Новая почта
							option.chekout-delivery__option(value="2") Интайм
							option.chekout-delivery__option(value="3") Украпочта
							option.chekout-delivery__option(value="4") FedEx

					label.form__label.form__label_required
						.form__label-text Способ оплаты
						select.chekout-payment__select
							option.chekout-payment__option(value="0") Выберите способ оплаты
							option.chekout-payment__option(value="1") Наличные
							option.chekout-payment__option(value="2") Безнал
							option.chekout-payment__option(value="3") ПриватБанк

				.form-group
					label.form__label.form__label_required
						.form__label-text Комментарий к заказу 
						textarea.form__input.form__input_textarea(name="comment" placeholder="Введите комментарий к заказу")
					label.form__label.form__label_captcha.form__label_required
						input.form__input.form__input_captcha(type="text" name="captcha" placeholder="Введите код")
						img.form__captcha(src="/img/other/captcha.png", alt="captcha")
					label.form__label.form__label_button
						button.button.hvr-sweep-to-right.form__button Отправить заказ
