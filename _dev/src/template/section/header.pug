// ====== header ======= 
header.header
	.header-top
		._container
			._row
				.menu
					.burger
						span Меню
						i.icon.icon-arrow_slider

					ul.menu-list
						li.menu-item.menu-item_active
							a.menu-link(href="/index.html") Главная
						li.menu-item
							a.menu-link(href="/blog.html") Блог
