							a.menu-link(href="/payment.html") Оплата
						li.menu-item
							a.menu-link(href="/delivery.html") доставка
						li.menu-item
							a.menu-link(href="/contacts.html") контакты
				
				.header-top__right
					.dropdown-group
						.language.dropdown
							ul.language-list
								li.language-item
									a.language-link(href="#") рус
								li.language-item
									a.language-link(href="/ua") укр


						.currency.dropdown
							ul.currency-list
								li.currency-item
									a.currency-link(href="#") UAH
								li.currency-item
									a.currency-link(href="#") USD

					.phones.dropdown
						ul.phones-list
							li.phones-item
								a.phones-link(href="tel:+380670001122") +380670001122
							li.phones-item
								a.phones-link(href="tel:+380981231212") +380981231212

					.schedule
						ul.schedule-list
							li.schedule-item Пн
							li.schedule-item Вт
							li.schedule-item Ср
							li.schedule-item Чт
							li.schedule-item.schedule-item_inactive Пт
							li.schedule-item Сб
							li.schedule-item Вс
						.schedule-time 8:00 - 20:00

	// ====== header-main ======= 
	._container
		.header-main


			.logo
				a.logo-link(href="index.html")
